[core]
    editor = /usr/bin/vim

[color]
    ui = true

[color "branch"]
    current = red reverse
    local = green
    remote = yellow

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green

[color "status"]
    added = red
    changed = green
    untracked = yellow

[alias]
    # svn
    st = status
    df = diff
    co = checkout
    ci = commit
    br = branch
    
    # commons
    cm = commit -m
    s = status -s
    cp = cherry-pick -x

    # quick logs
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    ls = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
    
    # aliases
    aliases = "!git config -l | grep alias | cut -c 7-"

    # stash
    sl = stash list
    sa = stash apply
    ss = stash save

    #stats
    cpt-commit = git shortlog -sn

